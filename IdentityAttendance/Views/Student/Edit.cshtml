

@model IdentityAttendance.Models.Entities.Student

<h1>Edit Student</h1>

@if (Model is null)
{
    <p>No student was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>
        <div class="mt-3">
            <label class="form-label">Roll</label>
            <input type="text" class="form-control" asp-for="Roll" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Student">Delete</button>
        </div>

    </form>
}
