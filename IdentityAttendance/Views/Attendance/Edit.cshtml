
@{
}

@model IdentityAttendance.Models.Entities.Attendance
<h1>Edit Attendance</h1>

@if (Model is null)
{
    <p>No attendance was found with this Id</p>
}
else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mt-3">
            <label class="form-label">Student ID</label>
            <input type="text" class="form-control" asp-for="StudentId" />
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Attendance">Delete</button>
        </div>

    </form>
}
